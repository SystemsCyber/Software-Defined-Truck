{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Requested Devices",
    "description": "The device(s) and their IDs being requested by the client.",
    "type": "array",
    "examples": [
        {
            "ID": {
                "$ref": "#/items/properties/examples/0"
            },
            "devices": {
                "$ref": "DeviceCollection.json/#/examples/0"
            }
        },
        {
            "ID": {
                "$ref": "#/items/properties/examples/1"
            },
            "devices": {
                "$ref": "DeviceCollection.json/#/examples/1"
            }
        }
    ],
    "maxItems": 10,
    "minItems": 1,
    "uniqueItems": true,
    "items": {
        "type":"object",
        "required": [
            "ID",
            "devices"
        ],
        "properties": {
            "ID": {
                "title": "ID",
                "description": "The ID of the device(s) being requested.",
                "type":"integer",
                "examples": [
                    1234,
                    4321
                ],
                "minimum": 4,
                "maximum": 65535
            },
            "devices": {
                "title": "Requested Devices",
                "description": "The requested device(s) associated with the requested ID.",
                "$ref": "DeviceCollection.json"
            }
        }
    }
}